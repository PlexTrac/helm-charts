# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = true

[{*.yml,*.yaml}]
indent_size = 2

[*.tpl]
indent_size = 2

[*.md]
indent_size = 4
max_line_length = 100